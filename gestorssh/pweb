painel_rest () {
echo ""
echo ""
echo -e "\033[1;36mSELECIONE QUAL SISTEMA QUE QUER RESTAURAR O SQL: \033[1;37m"
echo ""
echo -e "[1] - PAINEL WEB NO UBUNTU 18"
